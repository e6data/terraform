{
    "Statement": [
        {
            "Action": [
                "ec2:RunInstances",
                "ec2:CreateFleet"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:<AWS_REGION>::snapshot/*",
                "arn:aws:ec2:<AWS_REGION>::image/*",
                "arn:aws:ec2:<AWS_REGION>:*:subnet/*",
                "arn:aws:ec2:<AWS_REGION>:*:security-group/*"
            ],
            "Sid": "AllowScopedEC2InstanceAccessActions"
        },
        {
            "Action": [
                "ec2:RunInstances",
                "ec2:CreateFleet"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/karpenter.sh/nodepool": "<E6DATA_KARPENTER_NODEPOOL_NAME>",
                    "aws:ResourceTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned"
                }
            },
            "Effect": "Allow",
            "Resource": "arn:aws:ec2:<AWS_REGION>:*:launch-template/*",
            "Sid": "AllowScopedEC2LaunchTemplateAccessActions"
        },
        {
            "Action": [
                "ec2:RunInstances",
                "ec2:CreateLaunchTemplate",
                "ec2:CreateFleet"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/karpenter.sh/nodepool": "<E6DATA_KARPENTER_NODEPOOL_NAME>",
                    "aws:RequestTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned"
                }
            },
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:<AWS_REGION>:*:volume/*",
                "arn:aws:ec2:<AWS_REGION>:*:spot-instances-request/*",
                "arn:aws:ec2:<AWS_REGION>:*:network-interface/*",
                "arn:aws:ec2:<AWS_REGION>:*:launch-template/*",
                "arn:aws:ec2:<AWS_REGION>:*:instance/*",
                "arn:aws:ec2:<AWS_REGION>:*:fleet/*"
            ],
            "Sid": "AllowScopedEC2InstanceActionsWithTags"
        },
        {
            "Action": "ec2:CreateTags",
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/karpenter.sh/nodepool": "<E6DATA_KARPENTER_NODEPOOL_NAME>",
                    "aws:RequestTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned",
                    "ec2:CreateAction": [
                        "RunInstances",
                        "CreateFleet",
                        "CreateLaunchTemplate"
                    ]
                }
            },
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:<AWS_REGION>:*:volume/*",
                "arn:aws:ec2:<AWS_REGION>:*:spot-instances-request/*",
                "arn:aws:ec2:<AWS_REGION>:*:network-interface/*",
                "arn:aws:ec2:<AWS_REGION>:*:launch-template/*",
                "arn:aws:ec2:<AWS_REGION>:*:instance/*",
                "arn:aws:ec2:<AWS_REGION>:*:fleet/*"
            ],
            "Sid": "AllowScopedResourceCreationTagging"
        },
        {
            "Action": "ec2:CreateTags",
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/karpenter.sh/nodepool": "<E6DATA_KARPENTER_NODEPOOL_NAME>",
                    "aws:ResourceTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned"
                }
            },
            "Effect": "Allow",
            "Resource": "arn:aws:ec2:<AWS_REGION>:*:instance/*",
            "Sid": "AllowScopedResourceTagging"
        },
        {
            "Action": [
                "ec2:TerminateInstances",
                "ec2:DeleteLaunchTemplate"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/karpenter.sh/nodepool": "<E6DATA_KARPENTER_NODEPOOL_NAME>",
                    "aws:ResourceTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned"
                }
            },
            "Effect": "Allow",
            "Resource": [
                "arn:aws:ec2:<AWS_REGION>:*:launch-template/*",
                "arn:aws:ec2:<AWS_REGION>:*:instance/*"
            ],
            "Sid": "AllowScopedDeletion"
        },
        {
            "Action": [
                "ec2:DescribeSubnets",
                "ec2:DescribeSpotPriceHistory",
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeLaunchTemplates",
                "ec2:DescribeInstances",
                "ec2:DescribeInstanceTypes",
                "ec2:DescribeInstanceTypeOfferings",
                "ec2:DescribeImages",
                "ec2:DescribeAvailabilityZones"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": "<AWS_REGION>"
                }
            },
            "Effect": "Allow",
            "Resource": "*",
            "Sid": "AllowRegionalReadActions"
        },
        {
            "Action": "ssm:GetParameter",
            "Effect": "Allow",
            "Resource": "arn:aws:ssm:<AWS_REGION>::parameter/aws/service/*",
            "Sid": "AllowSSMReadActions"
        },
        {
            "Action": "pricing:GetProducts",
            "Effect": "Allow",
            "Resource": "*",
            "Sid": "AllowPricingReadActions"
        },
        {
            "Action": [
                "sqs:ReceiveMessage",
                "sqs:GetQueueUrl",
                "sqs:DeleteMessage"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:sqs:<AWS_REGION>:670514002493:e6data-final-spot-interruption-queue",
            "Sid": "AllowInterruptionQueueActions"
        },
        {
            "Action": "iam:PassRole",
            "Condition": {
                "StringEquals": {
                    "iam:PassedToService": "ec2.amazonaws.com"
                }
            },
            "Effect": "Allow",
            "Resource": "arn:aws:iam::670514002493:role/<EKS_CLUSTER_NAME>-KarpenterNodeRole",
            "Sid": "AllowPassingInstanceRole"
        },
        {
            "Action": "iam:CreateInstanceProfile",
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/karpenter.k8s.aws/ec2nodeclass": "<E6DATA_KARPENTER_EC2NODECLASS_NAME>",
                    "aws:RequestTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned",
                    "aws:RequestTag/topology.kubernetes.io/region": "<AWS_REGION>"
                }
            },
            "Effect": "Allow",
            "Resource": "*",
            "Sid": "AllowScopedInstanceProfileCreationActions"
        },
        {
            "Action": "iam:TagInstanceProfile",
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/karpenter.k8s.aws/ec2nodeclass": "<E6DATA_KARPENTER_EC2NODECLASS_NAME>",
                    "aws:RequestTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned",
                    "aws:RequestTag/topology.kubernetes.io/region": "<AWS_REGION>",
                    "aws:ResourceTag/karpenter.k8s.aws/ec2nodeclass": "<E6DATA_KARPENTER_EC2NODECLASS_NAME>",
                    "aws:ResourceTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned",
                    "aws:ResourceTag/topology.kubernetes.io/region": "<AWS_REGION>"
                }
            },
            "Effect": "Allow",
            "Resource": "*",
            "Sid": "AllowScopedInstanceProfileTagActions"
        },
        {
            "Action": [
                "iam:RemoveRoleFromInstanceProfile",
                "iam:DeleteInstanceProfile",
                "iam:AddRoleToInstanceProfile"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/karpenter.k8s.aws/ec2nodeclass": "<E6DATA_KARPENTER_EC2NODECLASS_NAME>",
                    "aws:ResourceTag/kubernetes.io/cluster/<EKS_CLUSTER_NAME>": "owned",
                    "aws:ResourceTag/topology.kubernetes.io/region": "<AWS_REGION>"
                }
            },
            "Effect": "Allow",
            "Resource": "*",
            "Sid": "AllowScopedInstanceProfileActions"
        },
        {
            "Action": "eks:DescribeCluster",
            "Effect": "Allow",
            "Resource": "arn:aws:eks:<AWS_REGION>:670514002493:cluster/<EKS_CLUSTER_NAME>",
            "Sid": "EKSClusterEndpointLookup"
        },
        {
            "Action": "iam:GetInstanceProfile",
            "Effect": "Allow",
            "Resource": "*",
            "Sid": "AllowInstanceProfileReadActions"
        }
    ],
    "Version": "2012-10-17"
}
